library 'jenkins-k8s-pipeline-scripts@v2'

pipeline {
  agent {
    label "jenkins-nodejs"
  }
  stages {
    stage('Build') {
      steps {
        ansiColor('xterm') {
          container('nodejs') {
            script {
              npm.withAuth() {
                sh "npm install"
              }
            }
          }
        }
      }
    }
    stage('Test') {
      steps {
        ansiColor('xterm') {
          container('nodejs') {
            script {
              npm.withAuth() {
                sh "CI=true npm test"
              }
            }
          }
        }
      }
    }
    stage('publish') {
      when {
        tag "*"
      }
      steps {
        ansiColor('xterm') {
          container('nodejs') {
            script {
              npm.publish()
            }
          }
        }
      }
    }
  }
  post {
    failure {
      sendNotification currentBuild.result, '#a-team'
    }
    fixed {
      sendNotification currentBuild.result, '#a-team'
    }
  }
}
