library 'jenkins-k8s-pipeline-scripts@v2'

pipeline {
  agent {
    label "jenkins-nodejs"
  }
  stages {
    stage('Build') {
      steps {
        ansiColor('xterm') {
          container('nodejs') {
            script {
              sh "yarn install"
            }
          }
        }
      }
    }
    stage('Test') {
      steps {
        ansiColor('xterm') {
          container('nodejs') {
            sh "CI=true yarn test"
          }
        }
      }
    }
    stage('publish') {
      when {
        tag "*"
      }
      steps {
        ansiColor('xterm') {
          container('nodejs') {
            script {
              npm.publish()
            }
          }
        }
      }
    }
  }
  post {
    always {
      sendNotification currentBuild.result, '#jenkins-a-team'
    }
    failure {
      sendNotification currentBuild.result, '#a-team'
    }
  }
}
